
<section style="margin-top: 5rem;">
  <div class="container mt-5">
    <div class="row">
  {{#each products}}
  <div class="col-md-3">
    <div class="card" style="width: 15rem; height: 22rem;">
       <div class="" style="width: 15rem; justify-content: center ;display: flex;">
  <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="Card image cap" style="height: 10rem; width: 10rem;">
    </div>
  <div class="card-body">
    <h5 class="card-title">{{this.product.Name}}</h5>
    <p>Price: &#x20B9; {{this.product.Price}}</p>
    <p class="card-text">Quantity: {{this.quantity}}</p>
  </div>
</div>
</div>
{{/each}}
   </div>
</div>
</section>